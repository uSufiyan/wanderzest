<% layout("/layouts/boilerplate") -%>
<div class="filters">
    <div class="filters1">
        <div class="filter">
            <a 
                href="/listings/trending"
                class="type <%= currentCategory === 'trending' ? 'active' : '' %>"
            >
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
        </div>
        <div class="filter">
            <a 
                href="/listings?category=hotel"
                class="type <%= currentCategory === 'hotel' ? 'active' : '' %>"
            >
                <div><i class="fa-solid fa-hotel"></i></div>
                <p>Hotels</p>
            </a>
        </div>
        <div class="filter">
            <a 
                href="/listings?category=room"
                class="type <%= currentCategory === 'room' ? 'active' : '' %>"
            >
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
        </div>
        <div class="filter">
            <a 
                href="/listings?category=iconic_city"
                class="type <%= currentCategory === 'iconic_city' ? 'active' : '' %>"
            >
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </a>
        </div>
    </div>
    
    <div class="filters2">
        <div class="filter">
            <a 
                href="/listings?category=villa"
                class="type <%= currentCategory === 'villa' ? 'active' : '' %>"
            >
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Villas</p>
            </a>
        </div>
        <div class="filter">
            <a 
                href="/listings?category=amazing_pool"
                class="type <%= currentCategory === 'amazing_pool' ? 'active' : '' %>"
            >
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </a>
        </div>
        <div class="filter">
            <a 
                href="/listings?category=beach"
                class="type <%= currentCategory === 'beach' ? 'active' : '' %>"
            >
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beaches</p>
            </a>
        </div>
        <div class="filter">
            <a 
                href="/listings?category=mountain"
                class="type <%= currentCategory === 'mountain' ? 'active' : '' %>"
            >
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>
        </div>
    </div>
    
    <div class="tax-toggle taxSwitch">
        <div class="form-check-reverse form-switch">
            <input 
                class="form-check-input" 
                type="checkbox" 
                role="switch" 
                id="switchCheckDefault"
            >
            <label class="form-check-label" for="switchCheckDefault">Before Taxes</label>
        </div>
    </div>
</div>
<br />

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of listings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" 
                    class="card-img-top" 
                    alt="listingimage" 
                    style="height: 20rem"
                />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b>
                        <br />
                        â‚¹ <span class="price" data-price="<%= listing.price %>">
                            <%= listing.price.toLocaleString("en-IN") %>
                        </span> 
                        for 1 night
                        <span class="tax-info"> &nbsp; +18% GST</span>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>
