<% layout("/layouts/boilerplate") -%>
<h1 class="col-6 offset-3 mt-3 mb-3">SignUp on WanderZest</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <form 
            action="/signup" 
            method="POST" 
            novalidate 
            class="needs-validation"
        >
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input 
                    name="username" 
                    id="username"
                    type="text" 
                    class="form-control" 
                    required
                />
                <div class="valid-feedback">Looks awesome!</div>
            </div>

            <div class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input 
                    name="email" 
                    id="email"
                    type="text" 
                    class="form-control" 
                    required
                />
            </div>

            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input 
                    name="password" 
                    id="password"
                    type="text" 
                    class="form-control" 
                    required
                />
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>